<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    >

    <ImageView
        android:id="@+id/myPicture"
        android:layout_width="225dp"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/myself" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/myPicture"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/about_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:fontFamily="@font/gowun_batang_regular"
                android:text="@string/about_text"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/gowun_batang_bold"
                android:text="Follow me!" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/linkedin"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="5dp"
                    android:src="@mipmap/linkedin" />

                <ImageView
                    android:id="@+id/github"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="12dp"
                    android:src="@mipmap/github" />
            </LinearLayout>

            <TextView
                android:id="@+id/about_text2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:fontFamily="@font/gowun_batang_regular"
                android:text="@string/about_text_02"
                android:textSize="15sp" />

        </LinearLayout>


    </ScrollView>



</RelativeLayout>